<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>sr_jsp1</servlet-name>
        <servlet-class>Controladores.sr_jsp1</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>sr_empleados</servlet-name>
        <servlet-class>Controladores.sr_empleados</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>cliente_sr</servlet-name>
        <servlet-class>Controladores.cliente_sr</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Proveedores_sr</servlet-name>
        <servlet-class>Controladores.Proveedores_sr</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>marca_sr</servlet-name>
        <servlet-class>Controladores.marca_sr</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>producto</servlet-name>
        <servlet-class>Controladores.producto</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>sr_jsp1</servlet-name>
        <url-pattern>/sr_jsp1</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>sr_empleados</servlet-name>
        <url-pattern>/sr_empleados</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>cliente_sr</servlet-name>
        <url-pattern>/cliente_sr</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Proveedores_sr</servlet-name>
        <url-pattern>/Proveedores_sr</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>marca_sr</servlet-name>
        <url-pattern>/marca_sr</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>producto</servlet-name>
        <url-pattern>/producto</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
